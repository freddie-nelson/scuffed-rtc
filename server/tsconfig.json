{
    "compilerOptions": {
        "module": "ESNext",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "rootDir": "src",
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src/**/*", "@types/**/*"]
}
